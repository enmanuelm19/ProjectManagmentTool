<div class="col-md-6 col-md-offset-3 col-sm-12 col-xs-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2>Log in</h2>
    </div>
    <div class="panel-body">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "Email", class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.input :password, required: false, label: false, placeholder: "Password", class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-group">
            <%= f.button :submit, "Log in",class: 'btn btn-primary btn-block' %>
          </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
